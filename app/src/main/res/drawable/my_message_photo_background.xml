<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <color android:color="@color/colorBackground"/>
    </item>

    <item
        android:left="0dp"
        android:right="10dp">
        <shape>
            <gradient android:startColor="@color/colorPrimaryDarkTransparent"
                android:endColor="@color/colorPrimaryTransparent"/>
            <corners android:radius="20.0dip" android:bottomRightRadius="0dp"
                android:bottomLeftRadius="5dp" />
        </shape>
    </item>

    <item android:left="2dp"
        android:right="12dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@color/colorMessageBackground"/>
            <corners android:radius="20.0dip" android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>


    <item
        android:gravity="right"
        android:right="-10.5dp"
        android:width="20dp">
        <shape>
            <solid android:color="@color/colorPrimaryTransparent"/>
        </shape>
    </item>
    <item
        android:gravity="right"
        android:right="-10dp"
        android:width="20dp">
        <shape>
            <solid android:color="@color/colorBackground"/>
            <corners android:bottomLeftRadius="20dp"/>
        </shape>
    </item>
</layer-list>