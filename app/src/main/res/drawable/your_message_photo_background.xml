<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <color android:color="@color/colorBackground"/>
    </item>

    <item
        android:left="10dp">
        <shape>
            <gradient android:startColor="@color/colorPrimaryTransparent"
                android:endColor="@color/colorPrimaryDarkTransparent"/>
            <corners android:radius="20.0dip" android:bottomLeftRadius="0dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>

    <item android:left="12dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@color/colorMessageBackground"/>
            <corners android:radius="20.0dip"
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>



    <item
        android:gravity="left"
        android:left="-10.5dp"
        android:width="20dp">
        <shape>
            <solid android:color="@color/colorPrimaryTransparent"/>
        </shape>
    </item>
    <item
        android:gravity="left"
        android:left="-10dp"
        android:width="20dp">
        <shape>
            <solid android:color="@color/colorBackground"/>
            <corners android:bottomRightRadius="20dp"/>
        </shape>
    </item>
</layer-list>